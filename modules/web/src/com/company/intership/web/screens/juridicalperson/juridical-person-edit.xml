<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://juridicalPersonEdit.caption"
        focusComponent="form"
        messagesPack="com.company.intership.web.screens.juridicalperson">
    <data>
        <instance id="juridicalPersonDc"
                  class="com.company.intership.entity.JuridicalPerson">
            <view extends="_local">
                <property name="user" view="_minimal"/>
                <property name="address" view="_minimal">
                    <property name="city"/>
                    <property name="street"/>
                    <property name="house"/>
                </property>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="juridicalPersonDc">
            <column width="350px">
                <textField id="fullNameField" property="fullName"/>
                <pickerField id="userField" property="user">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textField id="addressCityField" property="address.city"/>
                <textField id="addressStreetField" property="address.street"/>
                <textField id="addressHouseField" property="address.house"/>
                <textField id="emailField" property="email"/>
                <textField id="nameField" property="name"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
