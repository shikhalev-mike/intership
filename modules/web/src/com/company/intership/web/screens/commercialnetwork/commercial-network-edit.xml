<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://commercialNetworkEdit.caption"
        focusComponent="form"
        messagesPack="com.company.intership.web.screens.commercialnetwork">
    <data>
        <instance id="commercialNetworkDc"
                  class="com.company.intership.entity.CommercialNetwork">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true" margin="true">
        <form id="form" dataContainer="commercialNetworkDc">
            <column width="350px">
                <textField id="nameField" property="name"/>
                <textField id="fullNameField" property="fullName"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
